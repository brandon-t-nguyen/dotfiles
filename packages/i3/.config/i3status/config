general {
    output_format = "i3bar"
    colors = true
    interval = 5
}

# hardware
load {
    format = "Load: %1min"
}

cpu_usage {
   format = "CPU: %usage"
}

memory {
    format = "RAM: %used / %total (%percentage_used)"
}

